SUBDESIGN dk17_hot (
  clk: INPUT;
  i[1..0]: INPUT;
  o[2..0]: OUTPUT;
)

VARIABLE
  ss: MACHINE OF BITS (q[7..0]) WITH STATES (s00000001 = B"00000001", s00000010 = B"00000010", s00000100 = B"00000100", s00001000 = B"00001000", s00010000 = B"00010000", s00100000 = B"00100000", s01000000 = B"01000000", s10000000 = B"10000000");

BEGIN
  ss.clk = clk;
  TABLE
    i[1..0], ss => ss, o[2..0];
    B"00", s10000000 => s10000000, B"001";
    B"00", s01000000 => s00100000, B"000";
    B"00", s00100000 => s10000000, B"001";
    B"00", s00010000 => s00010000, B"100";
    B"00", s00001000 => s00100000, B"000";
    B"00", s00000100 => s00000010, B"000";
    B"00", s00000010 => s00010000, B"010";
    B"00", s00000001 => s00010000, B"100";
    B"01", s00100000 => s10000000, B"101";
    B"01", s00000010 => s10000000, B"101";
    B"01", s10000000 => s00010000, B"010";
    B"01", s01000000 => s00010000, B"000";
    B"01", s00001000 => s00010000, B"100";
    B"01", s00010000 => s00001000, B"101";
    B"01", s00000001 => s00001000, B"100";
    B"01", s00000100 => s00000001, B"000";
    B"10", s10000000 => s01000000, B"001";
    B"10", s00100000 => s01000000, B"001";
    B"10", s01000000 => s00100000, B"010";
    B"10", s00001000 => s00100000, B"010";
    B"10", s00000100 => s00100000, B"010";
    B"10", s00000001 => s00100000, B"010";
    B"10", s00010000 => s00010000, B"010";
    B"10", s00000010 => s00001000, B"010";
    B"11", s00100000 => s01000000, B"101";
    B"11", s00000010 => s01000000, B"101";
    B"11", s00001000 => s00100000, B"100";
    B"11", s00000100 => s00100000, B"100";
    B"11", s00000001 => s00100000, B"100";
    B"11", s10000000 => s00001000, B"010";
    B"11", s00010000 => s00001000, B"101";
    B"11", s01000000 => s00000100, B"000";
  END TABLE;
END;
